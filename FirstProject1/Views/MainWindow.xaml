<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstProject1"
        xmlns:UserControls="clr-namespace:FirstProject1.UserControls" x:Class="FirstProject1.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="testStyle">
            <Setter Property="Control.Background">
                <Setter.Value>
                    <!--<Label.Background>-->
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.3">
                        <GradientStop Color="#FF93AB8A"/>
                        <GradientStop Color="#FFCCFBBB" Offset="1"/>
                        <GradientStop Color="#FFF3EE78" Offset="0.51"/>
                    </LinearGradientBrush>
                    <!--</Label.Background>-->
                </Setter.Value>
            </Setter>
            <!--<Style.Triggers>
                -->
            <!--<Trigger Property="ItemsControl.IsMouseCaptured" Value="True">
                    <Setter Property="ItemsControl.Foreground" Value="blue"/>
                </Trigger>-->
            <!--
                <DataTrigger Binding="{Binding ElementName=CheckBox1,Path=IsChecked}" Value="True">
                    <Setter Property="Control.Foreground" Value="Red" />
                    <Setter Property="Control.Visibility" Value="Hidden" />
                </DataTrigger>-->
            <Style.Triggers>
                <DataTrigger Binding="{Binding Value, ElementName=progressBar1}" Value="100">
                    <Setter Property="UIElement.Visibility" Value="Hidden"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Button x:Name="btnTest1" Content="Button" Margin="72,76,30,0" VerticalAlignment="Top" Command="{Binding TestClick}" CommandParameter="{Binding Text, ElementName=TextBox1}" HorizontalAlignment="Right" Style="{StaticResource testStyle}" />
        <Label x:Name="labelTest1" Content="내가 만든 라벨" HorizontalAlignment="Left" Margin="72,31,0,0" VerticalAlignment="Top" Style="{StaticResource testStyle}"/>
        <CheckBox x:Name="CheckBox1" Content="나의체크박스" HorizontalAlignment="Left" Margin="72,121,0,0" VerticalAlignment="Top" IsChecked="False"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="72,165,0,0" VerticalAlignment="Top" GroupName="MyGroup"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="72,185,0,0" VerticalAlignment="Top" GroupName="MyGroup"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="72,205,0,0" VerticalAlignment="Top" GroupName="MyGroup"/>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Margin="72,237,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" />
        <PasswordBox HorizontalAlignment="Left" Margin="72,272,0,0" VerticalAlignment="Top" Width="120"/>
        <ListView x:Name="ListView1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="230,32,86,211" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="이미지" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Image Width="auto" Height="auto" Source="{Binding UserImg}"/>
                                    <Button Height="20"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="이름" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="나이" DisplayMemberBinding="{Binding UserAge}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label HorizontalAlignment="Left" Margin="88,86,0,0" VerticalAlignment="Top" Style="{StaticResource testStyle}">
            <Label Content="Label" Height="19" Width="47"/>
        </Label>
        <ProgressBar x:Name="progressBar1" HorizontalAlignment="Left" Height="10" Margin="72,334,0,0" VerticalAlignment="Top" Width="100" Value="{Binding ProgressValue}"/>

        <UserControls:ThreeControls HorizontalAlignment="Left" Margin="230,249,0,0" VerticalAlignment="Top" MyText="내가 생성한 라벨" MyCommand="{Binding TestClick}" Width="147"/>
        <UserControls:ThreeControls HorizontalAlignment="Left" Margin="377,249,0,0" VerticalAlignment="Top" Width="115"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="722,304,0,0" VerticalAlignment="Top" Command="{Binding SecondShow}"/>

    </Grid>
</Window>
